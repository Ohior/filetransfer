<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@android:color/darker_gray"
    app:cardCornerRadius="13dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_iv_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/send"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                app:drawableStartCompat="@drawable/send_image" />

            <TextView
                android:id="@+id/id_iv_receive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/receive"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                android:layout_marginHorizontal="10dp"
                app:drawableStartCompat="@drawable/receive_image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_iv_connect2pc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/connect_pc"
                android:layout_marginHorizontal="15sp"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                app:drawableStartCompat="@drawable/connect_pc" />

            <TextView
                android:id="@+id/id_iv_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/share"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:textSize="30sp"
                android:textStyle="bold|italic"
                app:drawableStartCompat="@drawable/share" />

        </LinearLayout>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>