    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/imagesFragment">

    <fragment
        android:id="@+id/imagesFragment"
        android:name="com.example.filetransfer.main.ImagesFragment"
        android:label="fragment_images"
        tools:layout="@layout/fragment_images" >
        <action
            android:id="@+id/imagesFragment_to_apkFragment"
            app:destination="@id/apkFragment" />
    </fragment>
    <fragment
        android:id="@+id/apkFragment"
        android:name="com.example.filetransfer.main.ApkFragment"
        android:label="fragment_apk"
        tools:layout="@layout/fragment_apk" />
</navigation>